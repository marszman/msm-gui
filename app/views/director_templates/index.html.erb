<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director_record" method="post">
  <div>
    <label for="director_name">Name</label>
    <input id="director_name" type="text" name="director_name">
  </div>

  <div>
    <label for="director_dob">Dob</label>
    <input id="director_dob" type="text" name="director_dob">
  </div>

  <div>
    <label for="director_bio">Bio</label>
    <input id="director_bio" type="text" name="director_bio">
  </div>

  <div>
    <label for="director_image">Image</label>
    <input id="director_image" type="text" name="director_image">
  </div>

  <button>
    Create director
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
